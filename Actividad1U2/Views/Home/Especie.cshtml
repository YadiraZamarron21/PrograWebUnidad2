@model U2Actividad1.Models.ViewModels.EspecieViewModel
@{
    Layout = "Layout";
}

<div class="especieficha1">
    <img src="~/especies/@(Model.Id).jpg" />
    <div>
        <h1>@Model.Nombre</h1>
        <p><label>Clase:</label><a href="~/Home/Especies/@Model.Clase">@Model.Clase</a></p>
        <p><label>Peso:</label>@Model.Peso</p>
        <p><label>Tamaño:</label>@Model.Tamaño</p>
        <p><label>Habitat:</label>@Model.Habitat</p>
        <p><label>Descripción:</label></p>
        <p>@Model.Descripcion</p>
    </div>

    <a href="~/Home/Especies/@Model.Clase">Regresar</a>
</div>